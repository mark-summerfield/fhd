st.sh

# NOTE

    "config" bucket
	key string # e.g., key='format' value=1
	value any

    "states" bucket
	key filename string
	value state enum # monitored unmonitored ignored
	# if renamed only keep newname here

    "renamed" bucket # ???
	key oldname string
	value newname string

    "saves" bucket
	key sid int # > 0
	value bucket
	    "*when" time.Time
	    "*comment" string
	    # then > 0 of:
	    key filename string
	    value struct { 
		    sha256 []byte
		    flag   byte # Raw | Flate | Lzw
		    blob   []byte
		    }

