# NOTE

    "config" bucket
	key string # e.g., key="format" value=1
	value any  # e.g., key="ignore" value=bucket key=filename value=Îµ

    "states" bucket
	key filename string
	value StateInfo {
	    monitored bool
	    sid int # the most recent sid this file was saved into
	}
	# if renamed only keep newname here

    "renamed" bucket # ???
	key oldname string
	value newname string

    "saves" bucket
	key sid int # > 0
	value bucket
	    "*when" time.Time
	    "*comment" string
	    # then > 0 of:
	    key filename string
	    value Entry

